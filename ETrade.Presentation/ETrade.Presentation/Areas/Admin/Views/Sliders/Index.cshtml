@using ETrade.Presentation.Areas.Admin.Models
@model SliderListViewModel
@{
    Layout = "_Layout";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Slider Transactions</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Slider Transactions</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Slider List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Image</th>
                                        <th>Header</th>
                                        <th>Description</th>
                                        <th>Link</th>
                                        <th>EndDate</th>
                                        <th>Status</th>
                                        <th>Sort</th>                                       
                                        <th>Transactions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.List)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Image</td>
                                            <td>@item.Header</td>
                                            <td>@item.Description</td>
                                            <td>@item.Link</td>
                                            <td>@item.EndDate</td>
                                            <td>@item.Status</td>
                                            <td>@item.Sort</td>                                          
                                            <td><a href="/admin/sliders/DeleteSlider/@item.Id">Sil</a> |
                                                <a href="/admin/sliders/EditSlider/@item.Id">Düzenle</a> </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Image</th>
                                        <th>Header</th>
                                        <th>Description</th>
                                        <th>Link</th>
                                        <th>EndDate</th>
                                        <th>Status</th>
                                        <th>Sort</th>
                                        <th>Transactions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
