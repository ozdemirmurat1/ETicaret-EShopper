@using ETrade.Presentation.Areas.Admin.Models
@model CategoriesViewModel
@{
    Layout = "_Layout";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Category Transactions</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Category Transactions</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Category List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>                                       
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>ParentId</th>
                                        <th>Sort</th>
                                        <th>Status</th>
                                        <th>SeoName</th>
                                        <th>Image</th>
                                        <th>Transactions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <tr>
                                            
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.ParentId</td>
                                            <td>@item.Sort</td>
                                            <td>@item.Status</td>
                                            <td>@item.SeoName</td>
                                            <td>@item.Image</td>
                                            <td>
                                                <a href="/admin/product/DeleteCategory/@item.Id">Delete</a> |
                                                <a href="/admin/product/EditCategory/@item.Id">Edit</a> |                                               
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>ParentId</th>
                                        <th>Sort</th>
                                        <th>Status</th>
                                        <th>SeoName</th>
                                        <th>Image</th>
                                        <th>Transactions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>