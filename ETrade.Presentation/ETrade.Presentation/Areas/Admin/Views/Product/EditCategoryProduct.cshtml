@using ETrade.Presentation.Areas.Admin.Models
@model CategoryProductEditModel

@{
    Layout = "_Layout";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Category Product Transactions</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item active">Category Product Transactions</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Category Product Edit</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-controller="Product" asp-action="EditCategoryProduct" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Product Id</label>
                                    <input type="text" class="form-control" asp-for="ProductId" placeholder="Product Id">
                                    <span asp-validation-for="ProductId"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Category Id</label>
                                    <input type="text" class="form-control" asp-for="CategoryId" placeholder="Category Id">
                                    <span asp-validation-for="CategoryId"></span>
                                </div>
                               
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Sort</label>
                                    <input type="text" class="form-control" asp-for="Sort" placeholder="Sort">
                                    <span asp-validation-for="Sort"></span>
                                </div>                              
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                                <!-- rasim -->
                                <input type="hidden" class="form-control" asp-for="Id">
                                <!-- rasim -->
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->


                </div>
                <!--/.col (left) -->

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
